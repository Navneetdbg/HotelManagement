                        @foreach (var item in Model.AccomodationTypes)
                        {
                            <button class="btn btn-sm change" data-id="@item.Id">
                                @item.Name
                            </button>
                            
                        }
                    </p>
                </div>
            </div>

            @foreach (var items in Model.AccomodationTypes)
            {
                <div data-id="@items.Id" class="row TypesRow" style="@(i != 0 ? "display : none": string.Empty)">
