                                var Images = item.AccomodationPackageImages != null && item.AccomodationPackageImages.Count() > 0 ? item.AccomodationPackageImages.First(): new HmsEntity.AccomodationPackageImage();
                               var ImageUrl = Images.Image != null ? Images.Image.Url : "img_1.jpg";
                                <div class="item">
                                    <div class="block-34">
                                        <div class="image">
                                            <a href="@Url.Action("Details", "Accomodations", new { AccomodationPackageId = item.Id })"><img src="Content/images/Site/@ImageUrl" alt="Image placeholder"></a>
                                        </div>
                                        <div class="text">
                                            <h2 class="heading">@item.Name</h2>
                                            <div>
                                                <p>₹ @item.PerNight</p>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            }



                        </div>

                    </div> <!-- .col-md-12 -->
                </div>
                i++;
            }
        </div>
    </div>
}

